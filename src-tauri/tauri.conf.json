{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "dbleaf",
  "version": "0.1.0",
  "identifier": "com.kagan.pg-manager",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "dbleaf",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDIzNzBFMTMzRTcwMzU5RDQKUldUVVdRUG5NK0Z3STFZdWtGQWlSWXlKVjlURHBYVkpuUCtIYWtaV092dUFlRHo4ZDdaOHBMQlIK",
      "endpoints": [
        "https://github.com/kaagann/dbleaf/releases/latest/download/latest.json"
      ]
    }
  }
}
